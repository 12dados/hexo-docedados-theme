.intro
  padding 4rem 0
  background-color $background-color
  text-align center
  max-width 1200px
  margin 6rem auto 3rem
  border 1px solid rgba(255,255,255,0.1)
  border-radius 8px
  box-shadow 0 0 20px rgba(0,0,0,0.1)
  
  .content
    p:first-of-type
      display flex
      justify-content center
      flex-wrap wrap
      gap 1.5rem
      margin-bottom 1rem
      
      // Style the icon links
      a
        display inline-flex
        align-items center
        padding 0.3rem 0.6rem
        color $font-secondary-color
        text-decoration none
        transition all 0.3s ease
        border-radius 4px
        background-color rgba(255,255,255,0.03)
        transform-origin center center
        transform translateY(0)
        
        &:hover
          color $post-link-hover-color
          background-color rgba(255,255,255,0.07)
          transform translateY(-2px)
        
        svg
          width 1.4em
          height 1.4em
          margin-right 0.8rem
          vertical-align middle
    
    // Style the title
    h2
      font-family $header-font-family
      font-size 3.5em
      margin 2rem 0
      letter-spacing -0.02em
      
      a
        color $font-color
        text-decoration none
        position relative
        
        &:hover
          color $post-link-hover-color
          
        &::after
          content ''
          position absolute
          bottom -0.3rem
          left 0
          width 100%
          height 2px
          background-color $post-link-color
          transform scaleX(0)
          transition transform 0.3s ease
        
        &:hover::after
          transform scaleX(1)
    
    // Style the description paragraph
    p:last-child
      font-size 1.4em
      line-height 1.6
      color $font-secondary-color
      max-width 700px
      margin 2rem auto
      font-family $basic-font-family
      
      a
        color $post-link-color
        text-decoration none
        border-bottom 1px solid transparent
        transition all 0.3s ease
        padding-bottom 2px
        
        &:hover
          color $post-link-hover-color
          border-bottom-color $post-link-hover-color