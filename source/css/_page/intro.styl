.intro
  padding 4rem 0
  background-color $background-color
  text-align center
  max-width 800px
  margin 0 auto

    .content
      p
        margin-bottom 2rem
        
        // Style the icon links
        a
          display inline-block
          padding 0.5rem 1rem
          margin 0.5rem
          color $font-color
          text-decoration none
          transition all 0.3s ease
          
          &:hover
            color $post-link-hover-color
            transform translateY(-2px)
          
          svg
            width 1.2em
            height 1.2em
            margin-right 0.5rem
            vertical-align middle
      
      // Style the title
      h2
        font-size 2.5em
        margin 2rem 0
        
        a
          color $font-color
          text-decoration none
          
          &:hover
            color $post-link-hover-color
      
      // Style the description paragraph
      p:last-child
        font-size 1.2em
        color $font-secondary-color
        max-width 600px
        margin 0 auto
        
        a
          color $post-link-color
          text-decoration underline
          
          &:hover
            color $post-link-hover-color
            text-decoration none