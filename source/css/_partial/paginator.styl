/** pagination **/

.pagination 
  display flex
  flex-direction row
  justify-content center
  align-items center
  list-style none
  white-space nowrap
  width 100%
  padding 2em 0
  font-family $header-font-family // Use header font for better hierarchy
  
  a,span
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-size 1rem
    color #bfbfbf
    letter-spacing 0.1em
    font-weight 500 // Slightly lighter weight for better readability
    padding 8px 12px // More generous padding
    text-decoration none
    transition all 0.3s ease-in-out // Smoother transition for all properties
  
  .page-number
    padding-bottom 3px
    margin 0 20px
    box-sizing border-box
    position relative
    display inline
    border-radius 4px // Subtle rounded corners
    
    &.disabled 
      display none
    
    &:hover a 
      color $pagination-link-active-color
      transform translateY(-1px) // Subtle lift effect on hover

    &:before,
    &:after 
      position absolute
      content ""
      width 0
      height 1px
      background $pagination-link-active-color
      transition 0.3s
      bottom 0px
    
    &:before .current,
    &:after .current
      width 100%
    
    &:before 
      left 50%
    
    &:after 
      right 50%
    
    &:hover 
      &:before,
      &:after 
        width 50%
      
    
    &.current
      color $pagination-link-active-color
      font-weight 700 // Bolder for current page
      
      a
        color $pagination-link-active-color
        
      &:before,
      &:after 
        width 60%
        height 2px // Slightly thicker underline for current page
      
    
  
